<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="0dp"
    android:paddingBottom="20dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">

    <EditText
        android:id="@+id/asset_name_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/change_asset_name"/>

    <EditText
        android:id="@+id/asset_quantity_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/change_asset_quantity"
        android:inputType="numberDecimal"/>

    <Button
        android:id="@+id/change_logo_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_logo"
        android:padding="20dp"/>

</LinearLayout>