<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="xyz.taika.cryptohodler.MainActivity"
    tools:showIn="@layout/activity_main">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/app_logo"
        android:padding="29dp"
        android:src="@drawable/cryptohodlerlogo" />

    <TextView
        android:id="@+id/infoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_above="@+id/buttonLinearLayout"
        android:paddingStart="22dp"
        android:paddingEnd="22dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:text="@string/info_text_view"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:background="@color/textViewBackground"/>


    <RelativeLayout
        android:id="@+id/buttonLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="38dp">

        <Button
            android:id="@+id/AssetListButton"
            android:layout_width="180dp"
            android:layout_alignParentStart="true"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:padding="25dp"
            android:text="@string/assetlist_button"
            android:textSize="16sp" />

        <Button
            android:id="@+id/aboutButton"
            android:layout_width="180dp"
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="24dp"
            android:padding="25dp"
            android:text="@string/about"
            android:textSize="16sp" />
    </RelativeLayout>


</RelativeLayout>


