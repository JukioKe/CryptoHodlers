<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="xyz.taika.cryptohodler.MainActivity"
    tools:showIn="@layout/activity_main">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentTop="true"
        android:padding="20dp"
        android:src="@drawable/cryptohodlerlogo"/>

    <TextView
        android:id="@+id/tvJsonItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:text="@string/info_text_view" />


    <Button
        android:id="@+id/getStatusButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/status_button"
        android:layout_below="@+id/tvJsonItem"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:padding="20dp"/>

    <Button
        android:id="@+id/editAssetsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Assets"
        android:layout_below="@+id/tvJsonItem"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="16dp"
        android:padding="20dp"/>

</RelativeLayout>
</ScrollView>